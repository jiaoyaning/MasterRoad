<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="coroutines"
            type="com.jyn.masterroad.kotlin.coroutines.KotlinCoroutinesTest" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".kotlin.coroutines.KotlinCoroutinesActivity"
        tools:ignore="HardcodedText">

        <Button
            android:id="@+id/button2"
            style="@style/tv"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="@{coroutines::globalScopeTest}"
            android:text="GlobalScope"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button4"
            style="@style/tv2"
            android:onClick="@{coroutines::runBlockingTest}"
            android:text="runBlocking\n阻塞版协程"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <Button
            android:id="@+id/button6"
            style="@style/tv"
            android:text="CoroutineStart\n 协程子参数"
            android:onClick="@{coroutines::coroutineStartTest}"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <Button
            android:id="@+id/button3"
            style="@style/tv2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="@{coroutines::lifecycleScopeTest}"
            android:text="LifecycleScope\n生命周期绑定"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button5"
            style="@style/tv"
            android:onClick="@{coroutines::viewModelScope}"
            android:text="ViewModelScope\nViewModel绑定"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button3" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>