<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cutting_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">#777777</item>
    </style>

    <style name="constraint_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="base_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height" tools:ignore="PrivateResource">
            @dimen/abc_action_button_min_height_material
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="tv" parent="base_tv">
        <item name="android:background">@drawable/bg_white_stroke</item>
    </style>

    <style name="tv2" parent="base_tv">
        <item name="android:background">@drawable/bg_white_stroke2</item>
    </style>

</resources>
