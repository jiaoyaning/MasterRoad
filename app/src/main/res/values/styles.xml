<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cutting_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">#777777</item>
    </style>

    <style name="constraint_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="base_constraint_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height" tools:ignore="PrivateResource">
            @dimen/abc_action_button_min_height_material
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="constraint_tv" parent="base_constraint_tv">
        <item name="android:background">@drawable/bg_white_stroke</item>
    </style>

    <style name="constraint_tv2" parent="base_constraint_tv">
        <item name="android:background">@drawable/bg_white_stroke2</item>
    </style>

</resources>
